for (var i=0;i<4;i++) {
    x=32;if(i%2==0) x=480;
    y=32;if(i>=2) y=360;
    $players[i]=new Player{
    x,y, p:16, c:8, pc:$colors[i]};
}

p=0; c=15;
while(true) {
    if (rnd(40)==0) {
        x=rnd(32);
        y=rnd(24);
        c=map_get(x,y);
        if (c>=3 && c<=6) {
            new PBullet{x:x*16+8,y:y*16+8,pc:c};
        }
    }
    update();
}
