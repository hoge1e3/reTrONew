$player=new Player{x:256, y: 300, p:$pat_spr+4, c:15};
var i=0, tmps;
$score=0;
while(true) {
    new Enemy{x:rnd(512), y:0, p:5, c:7};
    updateEx(30);
    showScore();
    //i+=1;
}
function showScore() {
    tmps=$score;
    for (i=5;i>1;i-=1){
        map_set(i,1,tmps%10+48);
        tmps=div(tmps,10);
    }
}