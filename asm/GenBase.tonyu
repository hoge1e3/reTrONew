\dataSection(type, array) {
    let perline=16;
    for (let i=0;i<array.length;i++) {
        if (i%perline==0) {
            printf("%s ",type);
        }
        printf("%d",array[i]);
        if ((i+1)%perline==0 || i==array.length-1) {
            printf("%n");
        } else {
            printf(", ");
        }
    }
    return "";
}
