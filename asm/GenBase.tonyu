\toDB(bytes) {
    let buf="",c=[];
    while(bytes.length) {
        let b=bytes.shift();
        c.push("0"+b.toString(16)+"h");
        if (c.length>=8) {
            buf+="db "+c.join(", ")+"\n";
            c=[];
        }
    }
    if (c.length) buf+="db "+c.join(", ")+"\n";
    return buf;
}
